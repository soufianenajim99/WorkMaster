<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "https://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- Mapping for the Employee class -->
    <class name="Models.Employee" table="employees">
        <!-- Primary key mapping -->
        <id name="id" column="id" type="int">
            <generator class="native" />
        </id>
        <!-- Property mappings for employee attributes -->
        <property name="name" column="name" type="string" not-null="true"/>
        <property name="email" column="email" type="string" not-null="true"/>
        <property name="phone" column="phone" type="string"/>
        <property name="post" column="post" type="string"/>
        <!-- Many-to-One relationship mapping with Departement class -->
        <many-to-one name="departement" class="Models.Departement" column="departement_id" not-null="true"/>
    </class>
</hibernate-mapping>
